<% provide(:title, "登录")%>

<div class="form-body">
  <%= form_for :session, url: login_path, html: { class: 'form-horizontal' } do |f| %>
   <div class="form-group">
      <label for="title" class="col-sm-2 control-label">邮箱</label>
      <div class="col-sm-5">
        <%= f.text_field :email, class: "form-control" %>
      </div>
   </div>

   <div class="form-group">
      <label for="title" class="col-sm-2 control-label">密码</label>
      <div class="col-sm-5">
        <%= f.password_field :password, class: "form-control" %>
      </div>
   </div>

   <div class="form-group">
     <label for="title" class="col-sm-2 control-label"></label>
     <div class="col-sm-5">
       <%= f.check_box :remember_me %> 记住密码 <%= link_to "忘记密码", new_password_reset_path %>
      </div>
   </div>
   
   <div class="form-group">
     <div class="col-sm-offset-2 col-sm-8">
        <%= f.submit "用户登录", class: "btn btn-default" %>
     </div>
   </div>
  <% end -%>
</div>
